<% @comments.each do |comment| %>
  <div class="container form-control mt-2">
    <div class="row">
      <div class="col-sm-2">
        <div class="form-floating">
          <%= link_to comment.photo.category do %>
            <%=  image_tag (comment.photo.image.url(:thumb)), class:"rounded"%>
          <% end %>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="form-floating">
          <div class="card-body" >
            <a class="card-link"><%= link_to comment.photo.category.title, comment.photo.category %></a>
            <h6 class="card-subtitle mb-2 text-muted"><%= comment.user.email %></h6>
            <h6 class="card-subtitle mb-2 text-muted"><%= comment.created_at.strftime("%H:%M  %d.%b.%Y")%></h6>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <h5 class="card-text"><%= simple_format(comment.body) %></h5>
      </div>
    </div>
  </div>
<% end %>
<%== pagy_bootstrap_nav(@pagy) %>
