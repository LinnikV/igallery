<h3>Comments</h3>


<% @comments.each do |comment| %>
  <div class="card">
      <p>
      <strong>Comment:</strong><br>
      <%= comment.body %>
    </p>

    <p>
      <strong>Ð¡reated by:</strong>
      <%= comment.user.email %>
