<%= turbo_frame_tag category do %>
  <%= form_with(model: category) do |form| %>
    <%= render 'shared/errors', form: form %>

    <div class="field">
      <%= form.label :title, class:"form-label" %><br>
      <%= form.text_field :title, class:"form-control" %>
    </div>

    <%= form.submit class: "btn btn-primary" %>
  <% end %>
<% end %>
