<span>
  <%= search_form_for @q do |f| %>
  <div class="input-group ">
    <%= f.search_field :title_cont, class:"form-control rounded" %>
    <%= f.submit class:"btn btn-outline-primary" %>
    </div>
  <% end %>
  <ul class="pagination">
    <li class="page-item page-link"><%= sort_link(@q, :title) %></li>
    <li class="page-item page-link"><%= sort_link(@q, :created_at) %></li>
    <li class="page-item page-link"><%= sort_link(@q, :photos_count) %></li>
  </ul>
</span>

<div id="category">
  <div class="row row-cols-4">
    <% @categories.each do |category| %>
      <div class="col">
        <%= render category %><br>
      </div>
    <% end %>
  </div> 
</div>
<%== pagy_bootstrap_nav(@pagy) %>



