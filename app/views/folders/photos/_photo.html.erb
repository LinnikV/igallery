<div id="<%= dom_id photo %>">
  <p>
    <strong>Image:</strong><br>
    <%= link_to image_tag(photo.image.url), folder_photo_path(@folder, photo) %>
  </p>

  <p>
    <strong>User:</strong>
    <%= photo.user.email %>
  </p>

  <p>
    <strong>Folder:</strong>
    <%= photo.folder.title %>
  </p>

</div>
